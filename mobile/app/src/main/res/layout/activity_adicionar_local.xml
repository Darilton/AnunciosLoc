<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:title="Adicionar Novo Local"
        app:titleTextColor="#212121"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:elevation="4dp" />

    <!-- ScrollView para rolar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nome do Local -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Local"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/et_nome_local"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ex: Escritório Central"
                android:background="@drawable/edittext_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="8dp" />

            <!-- Tipo de Local -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Local"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="24dp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_tipo_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorColor="#E91E63"
                app:tabSelectedTextColor="#E91E63"
                app:tabTextColor="#757575">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi ID" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Latitude e Longitude -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <EditText
                        android:id="@+id/et_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="-23.5505"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <EditText
                        android:id="@+id/et_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="-46.6333"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Raio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raio(metros)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/et_raio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="50"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:paddingStart="12dp"
                android:layout_marginTop="8dp" />

            <!-- Botão Usar GPS Actual -->
            <Button
                android:id="@+id/btn_usar_gps"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Usar GPS Actual"
                android:textColor="#E91E63"
                android:background="@drawable/button_pink_outline"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_target"
                android:drawablePadding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botões Cancelar / Guardar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancelar"
            android:textColor="#757575"
            android:background="@android:color/transparent"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:background="#D32F2F"
            android:minWidth="100dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>