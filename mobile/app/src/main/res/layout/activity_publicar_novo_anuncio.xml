<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cabeçalho -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnVoltar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/chevron"
                    android:contentDescription="Voltar"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publicar Novo Anúncio"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Conteúdo do Anúncio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conteúdo do Anúncio"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto do Anúncio"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTextoAnuncio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escreva sua mensagem aqui" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Local de Destino -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local de Destino"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spinnerLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/locais"
                android:spinnerMode="dropdown" />

            <!-- Par chave=valor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtChave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="chave (ex: departamento)" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Valor (ex: RH)" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnAdicionarPar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Adicionar par chave=valor"
                android:textColor="@color/red"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="#FFFDE7"
                android:layout_marginTop="8dp" />

            <!-- Configuração de Tempo e Entrega -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuração de Tempo e Entrega"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Data de início">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDataInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="Friday 31th October 2025 8:10" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Data de fim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDataFim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="Friday 31th October 2025 8:10" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Modo de entrega -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo de Entrega Preferido"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnCentralizado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Centralizado"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="@color/gray"
                    android:textAllCaps="false" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnDescentralizado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Descentralizado"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/red"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aceitar Transmissão por mula"
                    android:textColor="@color/black" />

                <Switch
                    android:id="@+id/switchMula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:backgroundTint="#FFCDD2"
                    android:textStyle="bold" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnPublicar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Publicar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>